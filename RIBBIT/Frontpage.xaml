<Window x:Class="RIBBIT.Frontpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIBBIT"
        mc:Ignorable="d"
        Title="Frontpage" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="lvPosts" HorizontalAlignment="Left" Height="354" Margin="30,56,0,0" VerticalAlignment="Top" Width="735" MouseDoubleClick="lvPosts_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="629,25,0,0" VerticalAlignment="Top" Width="77" Height="26" Click="BtnSearch_Click"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="41" Margin="131,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="431"/>
        <Button x:Name="btnGoBack" Content="BACK" HorizontalAlignment="Left" Margin="730,25,0,0" VerticalAlignment="Top" Width="52" Click="BtnGoBack_Click"/>

    </Grid>
</Window>
